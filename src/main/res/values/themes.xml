<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--==== Base application theme. ====-->
    <style name="Base" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Snapable.Widget.ActionBar</item>
    </style>

    <!--==== Snapable Theme ====-->
    <style name="SnapableTheme" parent="Base">
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="SnapableTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>