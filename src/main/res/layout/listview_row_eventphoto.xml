<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/background__polaroid_rectangle"
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/listview_row_eventphoto_photo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/photo_blank" />

    <TextView
        android:id="@+id/listview_row_eventphoto_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center_horizontal"
        tools:text="My awesome sample caption!" />

    <TextView
        android:id="@+id/listview_row_eventphoto_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="italic"
        tools:text="John Doe" />

</LinearLayout>