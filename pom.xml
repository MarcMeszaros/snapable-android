<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>ca.hashbrown.snapable</groupId>
    <artifactId>parent</artifactId>
    <version>1.0</version>
    <packaging>pom</packaging>
    <name>Snapable</name>

    <repositories>
        <repository>
            <id>snapable.thirtparty</id>
            <url>http://nexus.snapable.com/content/repositories/thirdparty</url>
        </repository>
        <repository>
            <id>snapable.thirtparty-snapshots</id>
            <url>http://nexus.snapable.com/content/repositories/thirdparty-snapshots</url>
        </repository>
    </repositories>

    <dependencyManagement>
        <dependencies>
            <!-- the Android SDK library -->
            <dependency>
                <groupId>com.google.android</groupId>
                <artifactId>android</artifactId>
                <version>2.3.3</version>
            </dependency>

            <!-- the Android test SDK library -->
            <dependency>
                <groupId>com.google.android</groupId>
                <artifactId>android-test</artifactId>
                <version>2.3.3</version>
            </dependency>

            <dependency>
                <groupId>org.codegist.crest</groupId>
                <artifactId>codegist-crest</artifactId>
                <version>2.0.0-RC2-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>org.codehaus.jackson</groupId>
                <artifactId>jackson-mapper-asl</artifactId>
                <version>1.9.10</version>
            </dependency>

            <dependency>
              <groupId>android.support</groupId>
              <artifactId>compatibility-v4</artifactId>
              <version>10</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <!-- the Android Maven plugin -->
                <plugin>
                    <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                    <artifactId>android-maven-plugin</artifactId>
                    <version>3.4.1</version>
                    <extensions>true</extensions>
                    <configuration>
                        <sdk>
                            <!-- platform/api version (api v10 = Android 2.3.3) -->
                            <platform>10</platform>
                        </sdk>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <!-- the various modules that make up the project -->
    <modules>
        <!-- this is the actual application -->
        <module>app</module>
        <!-- this is the unit test application -->
        <!-- <module>test</module> -->
    </modules>

</project>