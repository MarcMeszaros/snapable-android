<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/fragment_photo_share__image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/photo_blank" />

    <ProgressBar
        android:id="@+id/fragment_photo_share__progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/fragment_photo_share__image"
        android:indeterminate="true"
        android:padding="5dp" />

    <EditText
        android:id="@+id/fragment_photo_share__caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_photo_share__image"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Caption" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/fragment_photo_share__button_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_photo_share__caption"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Done" />

</RelativeLayout>